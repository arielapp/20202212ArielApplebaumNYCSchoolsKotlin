<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/schoolsFragment">

    <fragment
        android:id="@+id/schoolsFragment"
        android:name="com.example.a20202212arielapplebaumnycschoolskotlin.ui.SchoolsFragment"
        android:label="Schools"
        tools:layout="@layout/fragment_schools" >
        <action
            android:id="@+id/action_schoolsFragment_to_schoolDetailFragment"
            app:destination="@id/schoolDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/schoolDetailFragment"
        android:name="com.example.a20202212arielapplebaumnycschoolskotlin.ui.SchoolDetailFragment"
        android:label="{name}"
        tools:layout="@layout/fragment_school_detail" >
        <argument
            android:name="dbn"
            app:argType="string" />
    </fragment>
</navigation>